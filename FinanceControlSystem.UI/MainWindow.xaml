<Window x:Class="FinanceControlSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceControlSystem.UI"
        xmlns:components="clr-namespace:FinanceControlSystem.UI.Components"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <TabControl>
            <TabItem Header="Счета">
                <components:AccountControl></components:AccountControl>
            </TabItem>
            <TabItem Header="Категории">
                <components:CategoryControl></components:CategoryControl>
            </TabItem>
            <TabItem Header="Доходы">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Расходы">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Прогноз">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
